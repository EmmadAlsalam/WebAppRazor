@page
@model WebAppRazorPages.Pages.SignInModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<section id="signin">
    <div class="container">
        <form method="post" novalidate>
            <h1> Welcome Back</h1>
            <p> Dont have an account yet?<a asp-page="/singup"> Sign up here</a></p>

            <div class="content">
                <div id="form-email" class="input-group">
                    <label asp-for="@Model.From.Email"></label>
                    <span asp-validation-for="@Model.From.Email"></span>
                    <input asp-for="@Model.From.Email" placeholder=" Email" />

                </div>
                <div id="form-passsword" class="input-group">
                    <label asp-for="@Model.From.Password"></label>
                    <span asp-validation-for="@Model.From.Password"></span>
                    <input asp-for="@Model.From.Password" placeholder="  Password" type="password" />

                </div>

                <div id="form-remember" class="checkbox-group">
                    <input asp-for="@Model.From.RememberMe" />
                    <span asp-validation-for="@Model.From.RememberMe"></span>
                    <label asp-for="@Model.From.RememberMe"> I agree to the <a asp-page="/terms"> Terms</a> & <a asp-page="/conditions "> conditions</a> </label>
                </div>

                <button id="form-buttom" class="btn-theme-s" type="submit"> Sign in</button>
                <a id="forgot-password" asp-page="/forgot"> Forgot your password</a>
                <hr>
                <div id="external-signin">
                    <a class="btn-gray" asp-page="/external/google"><i class="fa-brands fa-google"></i>Google</a>
                    <a class="btn-gray" asp-page="/external/facebook"><i class="fa-brands fa-facebook-f"></i>Facebook</a>
                </div>

            </div>


            

        </form>
        
        
    </div>
</section>
